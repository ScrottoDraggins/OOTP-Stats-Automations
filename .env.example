# Azure MySQL Database Configuration
OOTP_DB_HOST=your-server.mysql.database.azure.com
OOTP_DB_USER=your_username@your-server
OOTP_DB_PASSWORD=your_password
OOTP_DB_NAME=your_database_name
OOTP_DB_PORT=3306

# SSL Configuration (optional)
# For Azure MySQL, SSL is typically required
# DB_SSL_CA=/path/to/ssl-ca-certificate.pem
# DB_SSL_DISABLED=false

# Directory to monitor for new folders containing SQL files
OOTP_WATCH_PATH=C:\path\to\watch\directory
